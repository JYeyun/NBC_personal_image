<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_margin="20dp"
        android:background="@color/blue"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/item_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사이트 이름"
        app:layout_constraintTop_toBottomOf="@+id/item_img"
        app:layout_constraintStart_toStartOf="@+id/item_img"/>
    <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_site"
        app:layout_constraintStart_toStartOf="@+id/item_img"/>
    <ImageButton
        android:id="@+id/btn_empty_heart"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="5dp"
        android:background="@drawable/empty_heart"
        app:layout_constraintRight_toRightOf="@+id/item_img"
        app:layout_constraintTop_toTopOf="@+id/item_img"/>
    <ImageButton
        android:id="@+id/btn_fill_heart"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="5dp"
        android:background="@drawable/fill_heart"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="@+id/item_img"
        app:layout_constraintTop_toTopOf="@+id/item_img"/>
</androidx.constraintlayout.widget.ConstraintLayout>